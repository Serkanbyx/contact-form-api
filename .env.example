# Server
PORT=3000
NODE_ENV=development

# Database
DB_PATH=./data/contacts.db

# SMTP (leave empty to auto-create an Ethereal test account)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Mail
MAIL_FROM=noreply@contactform.local
ADMIN_EMAIL=admin@contactform.local

# Rate Limit
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=10

# CORS
CORS_ORIGIN=*
